{
  "extends": ["../../.eslintrc"],
  "plugins": [ "ban"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "ban/ban": [
        "error",
        { "name": "bind", "message": "Prefer use arrow function" }
      ]}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
